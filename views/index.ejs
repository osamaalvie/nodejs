<html lang="en">
<%- include('./partials/head.ejs') %>

  <body>
    <h1>Home</h1>

    <%- include('./partials/nav.ejs') %>

      <div class="content">
        <h2>All Blogs</h2>

        <% if(blogs.length> 0) { %> <% blogs.forEach(blog=> { %>
            <a href="/blogs/<%= blog._id%>">
              <h3 class="title">
                <%= blog.title%>
              </h3>
              <p class="snippet">
                <%= blog.snippet%>
              </p>
            </a>


            <%})%>
              <% } else {%>
                <p>no data</p>
                <%}%>
      </div>
  </body>

</html>